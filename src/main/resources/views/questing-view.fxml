<AnchorPane prefHeight="600.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.QuestingController">
   <children>
      <TabPane layoutX="334.0" layoutY="47.0" prefHeight="546.0" prefWidth="859.0" tabClosingPolicy="UNAVAILABLE">
        <tabs>
          <Tab closable="false" text="Quest Journal">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="518.0" prefWidth="525.0" />
            </content>
          </Tab>
          <Tab closable="false" text="Find a Quest">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="478.0" prefWidth="881.0">
                     <children>
                        <TableView layoutX="14.0" layoutY="60.0" prefHeight="443.0" prefWidth="474.0">
                          <columns>
                            <TableColumn prefWidth="135.19997882843018" text="Quest Giver" />
                            <TableColumn prefWidth="108.00004577636719" text="Giver Rank" />
                              <TableColumn prefWidth="120.0" text="Date of Posting" />
                              <TableColumn prefWidth="109.60001220703123" text="Reward" />
                          </columns>
                        </TableView>
                     </children>
                  </AnchorPane>
            </content>
          </Tab>
            <Tab text="My Quests">
              <content>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <TableView fx:id="tableViewMyQuests" layoutX="14.0" layoutY="15.0" prefHeight="487.0" prefWidth="604.0">
                          <columns>
                            <TableColumn fx:id="tableColumnMyQuestsQuestWord" prefWidth="166.39996337890625" text="Quest Word" />
                              <TableColumn fx:id="tableColumnMyQuestsDateOfPosting" prefWidth="163.20001220703125" text="Date of Posting" />
                              <TableColumn fx:id="tableColumnMyQuestsReward" prefWidth="171.99993896484375" text="Reward" />
                              <TableColumn fx:id="tableColumnMyQuestsStatus" prefWidth="100.79998779296875" text="Status" />
                          </columns>
                        </TableView>
                        <TextArea editable="false" layoutX="632.0" layoutY="14.0" prefHeight="487.0" prefWidth="200.0" text="View quests that you posted.&#10;&#10;Here you can see the word associated with your quest, the date you posted the quest at, the reward and its current status.&#10;&#10;When you post a new quest, its status will always be 'posted'. Once someone accepts it, its status becomes 'accepted' and finally, once completed, it becomes either 'completed' or 'failed'.&#10;&#10;If the quest is failed by the player who took it, your reward tokens get sent back to you.&#10;&#10;" wrapText="true">
                           <font>
                              <Font name="Bell MT" size="14.0" />
                           </font>
                        </TextArea>
                     </children></AnchorPane>
              </content>
            </Tab>
            <Tab text="Post a Quest">
              <content>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="518.0" prefWidth="794.0">
                     <children>
                        <TextField fx:id="textFieldWord" layoutX="60.0" layoutY="72.0" promptText="Your word" />
                        <Button layoutX="60.0" layoutY="215.0" mnemonicParsing="false" onAction="#handlePostNewQuest" prefHeight="26.0" prefWidth="149.0" text="Post New Quest" />
                        <TextArea editable="false" layoutX="440.0" layoutY="53.0" prefHeight="363.0" prefWidth="246.0" text="Post a new quest for other players to complete.&#10;&#10;Choose a word, set a reward and fire up your quest!&#10;&#10;Make sure that you have enough tokens to post the quest with your selected reward. You can see how many tokens you have in the upper left corner.&#10;&#10;You can view quests that you posted in the My Quests tab." wrapText="true">
                           <font>
                              <Font name="Bell MT" size="14.0" />
                           </font>
                        </TextArea>
                        <Spinner fx:id="spinnerReward" editable="true" layoutX="60.0" layoutY="145.0" />
                        <Label layoutX="60.0" layoutY="128.0" text="Reward:" />
                     </children></AnchorPane>
              </content>
            </Tab>
        </tabs>
      </TabPane>
      <Label fx:id="labelRankTokens" layoutX="359.0" layoutY="22.0" text="Your rank:">
         <font>
            <Font size="14.0" />
         </font>
      </Label>
      <ImageView fx:id="imageView" fitHeight="600.0" fitWidth="337.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../images/game.jpg" />
         </image>
      </ImageView>
      <Label layoutX="78.0" layoutY="40.0" text="Questie" textFill="#a0a0a1">
         <font>
            <Font name="Lucida Handwriting Italic" size="36.0" />
         </font>
      </Label>
   </children>
</AnchorPane>
